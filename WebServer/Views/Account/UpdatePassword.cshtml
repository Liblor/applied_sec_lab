@using System.Security.Claims;

@model WebServer.Models.Account.UpdatePasswordDetails

@{
    ViewData["Title"] = "Change password";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="viewport d-flex flex-column mx-auto">
    <form method="post" asp-controller="Account" asp-action="UpdatePassword">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <th scope="row"><label asp-for="OldPassword"></label></th>
                    <td>
                        <input type="password" asp-for="OldPassword" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <th scope="row"><label asp-for="NewPassword"></label></th>
                    <td>
                        <input type="password" asp-for="NewPassword" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-center">
            <div class="btn-group-vertical">
                <button class="btn btn-primary" type="submit">Change password</button>
                <a class="btn btn-secondary" asp-controller="Account" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>
